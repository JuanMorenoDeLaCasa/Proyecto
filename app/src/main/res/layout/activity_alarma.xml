<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#31393c"
    android:backgroundTint="#31393c"
    tools:context=".Alarma">

    <Button
        android:id="@+id/boton_atras_alarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#31393c"
        android:text="AtrÃ¡s"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconSize="20dp"
        app:iconTint="#fff4e1"
        app:iconTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="547dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496">

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:barrierDirection="top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundTint="#95724a"
                android:text="   1 Minuto"
                android:textAlignment="viewStart"
                android:textColor="#fff4e1"
                android:textSize="20sp"
                android:thumbTint="#fbaa58" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="   2 Minutos"
                android:textAlignment="viewStart"
                android:textColor="#fff4e1"
                android:textSize="20sp"
                android:thumbTint="#fbaa58" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="   5 Minutos"
                android:textAlignment="viewStart"
                android:textColor="#fff4e1"
                android:textSize="20sp"
                android:thumbTint="#fbaa58" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="  10 Minutos"
                android:textAlignment="viewStart"
                android:textColor="#fff4e1"
                android:textSize="20sp"
                android:thumbTint="#fbaa58" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="  15 Minutos"
                android:textAlignment="viewStart"
                android:textColor="#fff4e1"
                android:textSize="20sp"
                android:thumbTint="#fbaa58" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="  30 Minutos"
                android:textAlignment="viewStart"
                android:textColor="#fff4e1"
                android:textSize="20sp"
                android:thumbTint="#fbaa58" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>