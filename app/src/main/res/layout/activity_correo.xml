<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#31393c"
    android:backgroundTint="#31393c"
    tools:context=".Correo">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="325dp"
        android:layout_height="138dp"
        android:background="@drawable/background_rounded"
        android:backgroundTint="#fff4e1"
        android:elevation="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129">

        <EditText
            android:id="@+id/editTextDestinatario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Escribe aquí el destinatario" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="325dp"
        android:layout_height="138dp"
        android:background="@drawable/background_rounded"
        android:backgroundTint="#fff4e1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.409">

        <EditText
            android:id="@+id/editTextAsunto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text"
            android:text="Escribe aquí el asunto" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="325dp"
        android:layout_height="138dp"
        android:background="@drawable/background_rounded"
        android:backgroundTint="#fff4e1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.687">

        <EditText
            android:id="@+id/editTextCuerpo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text"
            android:text="Escribe aquí el cuerpo" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="100dp"
        android:background="#4b565c"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/boton_atras_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:backgroundTint="#4b565c"
            android:elevation="40dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="Atrás"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconSize="20dp"
            app:iconTint="#fff4e1"
            app:iconTintMode="src_atop" />

    </LinearLayout>

    <Button
        android:id="@+id/boton_nuevocorreo"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:height="100dp"
        android:backgroundTint="#fbaa58"
        android:elevation="500dp"
        android:visibility="visible"
        app:icon="@android:drawable/ic_input_add"
        app:iconPadding="0dp"
        app:iconSize="50dp"
        app:iconTint="#2e3b3d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="190dp"
        android:background="#4b565c"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>